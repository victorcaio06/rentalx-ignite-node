{
  "env": {
    "es2021": true,
    "node": true
  },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint", "prettier", "simple-import-sort"
    ],
    "rules": {
      "prettier/prettier": "error", "simple-import-sort/imports": "warn"
    }
}
